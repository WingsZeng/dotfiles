keybinds clear-defaults=true {
    scroll {
        bind "e" { EditScrollback; SwitchToMode "Prompt"; }
        bind "/" { SwitchToMode "EnterSearch"; SearchInput 0; }
        bind "Ctrl c" { ScrollToBottom; SwitchToMode "Prompt"; }
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "PageDown" "Right" "l" { PageScrollDown; }
        bind "PageUp" "Left" "h" { PageScrollUp; }
    }
    search {
        bind "Ctrl c" { ScrollToBottom; SwitchToMode "Prompt"; }
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "PageDown" "Right" "l" { PageScrollDown; }
        bind "PageUp" "Left" "h" { PageScrollUp; }
        bind "n" { Search "down"; }
        bind "N" { Search "up"; }
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "w" { SearchToggleOption "Wrap"; }
        bind "o" { SearchToggleOption "WholeWord"; }
    }
    prompt {
        bind "Ctrl d" "Ctrl u" { CloseFocus; }
        bind "i" { SwitchToMode "Normal"; }
        bind "_" { NewPane "Down"; }
        bind "|" { NewPane "Right"; }
        bind "f" { ToggleFocusFullscreen; }
        bind "Space" { TogglePaneEmbedOrFloating; }
        bind "[" { SwitchToMode "Scroll"; }
        bind "/" { SwitchToMode "EnterSearch"; SearchInput 0; }
        bind "Alt h" { MovePane "Left"; }
        bind "Alt j" { MovePane "Down"; }
        bind "Alt k" { MovePane "Up"; }
        bind "Alt l" { MovePane "Right"; }
        bind "h" { MoveFocusOrTab "Left"; }
        bind "l" { MoveFocusOrTab "Right"; }
        bind "j" { MoveFocus "Down"; }
        bind "k" { MoveFocus "Up"; }
        bind "Ctrl h" { Resize "Increase Left"; }
        bind "Ctrl j" { Resize "Increase Down"; }
        bind "Ctrl k" { Resize "Increase Up"; }
        bind "Ctrl l" { Resize "Increase Right"; }
        bind "Ctrl H" { Resize "Decrease Left"; }
        bind "Ctrl J" { Resize "Decrease Down"; }
        bind "Ctrl K" { Resize "Decrease Up"; }
        bind "Ctrl L" { Resize "Decrease Right"; }
    }
    entersearch {
        bind "Ctrl c" "Esc" { SwitchToMode "Scroll"; }
        bind "Enter" { SwitchToMode "Search"; }
    }
    shared {
        bind "Alt =" "Alt +" { Resize "Increase"; }
        bind "Alt -" { Resize "Decrease"; }
        bind "Alt [" { PreviousSwapLayout; }
        bind "Alt ]" { NextSwapLayout; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }
        bind "Ctrl t" { NewTab; }
    }
    shared_except "prompt" {
        bind "Alt q" { SwitchToMode "Prompt"; }
    }
}

plugins {
    zjstatus { path "zjstatus"; }
}

// Choose what to do when zellij receives SIGTERM, SIGINT, SIGQUIT or SIGHUP
// eg. when terminal window with an active zellij session is closed
// Options:
//   - detach (Default)
//   - quit
//
on_force_close "quit"

// Choose the mode that zellij uses when starting up.
// Default: normal
//
default_mode "prompt"

// Toggle between having pane frames around the panes
// Options:
//   - true (default)
//   - false
//
pane_frames false

// Define color themes for Zellij
// For more examples, see: https://github.com/zellij-org/zellij/tree/main/example/themes
// Once these themes are defined, one of them should to be selected in the "theme" section of this file
//
themes {
     monokai-soda {
         fg 248 248 242
         bg 34 34 34
         red 249 38 114
         green 166 226 46
         yellow 230 219 116
         blue 102 217 239
         magenta 174 129 255
         orange 253 151 31
         cyan 102 217 239
         black 17 17 17
         white 248 248 242
     }
 }

// Choose the theme that is specified in the themes section.
// Default: default
//
theme "monokai-soda"

// Provide a command to execute when copying text. The text will be piped to
// the stdin of the program to perform the copy. This can be used with
// terminal emulators which do not support the OSC 52 ANSI control sequence
// that will be used by default if this option is not set.
//
copy_command "wl-copy"                    // wayland

ui {
    pane_frames {
        rounded_corners true
        hide_session_name true
    }
}
